{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "lib": ["ES2019"],
  "types": ["node", "jest"],
  "typeRoots": ["node_modules/@types", "src/types"],
  "include": ["src/**/*.ts", "src/lib/functions/matrix-worker.js"],
  "exclude": ["node_modules"]
}
